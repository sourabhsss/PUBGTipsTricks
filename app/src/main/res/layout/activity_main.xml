<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/crop">

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginTop="44dp"
        android:layout_weight="2"
        android:text="PUBG Mobile Season 5 Best Tips and Tricks"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="9dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="393dp"
        android:layout_height="544dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/basics"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:padding="20dp"
            android:text="Basic Tips"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            />

        <Button
            android:id="@+id/ar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:padding="20dp"
            android:text="New Assault Rifles Tips"
            android:textStyle="bold" />

        <Button
            android:id="@+id/snipers"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:padding="20dp"
            android:text="Sniper Tips"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shotguns"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:padding="20dp"
            android:text="Shot Guns Tips"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nades"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:padding="20dp"
            android:text="Grenade and Smoke Tips"
            android:textStyle="bold" />

        <Button
            android:id="@+id/exit"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:padding="20dp"
            android:text="EXIT"
            android:textSize="15dp"
            android:textStyle="bold" />

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7276248071776735/2498341493">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>